<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fitsSystemWindows="true"
        android:elevation="3dp"
        android:background="@color/transparent">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="240dp"

            app:layout_constraintTop_toTopOf="parent"

            android:theme="@style/ToolbarThemeWhite"
            app:expandedTitleTextAppearance="@style/CollapsingToolbarLayoutExpandedTextStyle"

            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true">
            <ImageView
                android:id="@+id/mainImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:padding="50dp"
                android:scaleType="fitCenter"

                app:layout_collapseMode="parallax"
                android:fitsSystemWindows="true"
                app:srcCompat="@mipmap/ic_launcher"
                android:contentDescription="@string/sponsor_logo"
                />


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"

                app:layout_collapseMode="pin"
                android:fitsSystemWindows="false"
                />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/descriptionTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                android:layout_marginTop="@dimen/margin_top_large"
                android:layout_marginStart="@dimen/margin_start_large"
                android:layout_marginEnd="@dimen/margin_start_large"

                android:textAppearance="@style/TitlePrimary"
                android:text="@string/description"
                />
            
            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintEnd_toEndOf="@id/descriptionTitleTextView"
                app:layout_constraintStart_toStartOf="@id/descriptionTitleTextView"
                app:layout_constraintTop_toBottomOf="@id/descriptionTitleTextView"
                app:layout_constraintHorizontal_bias="0"

                android:layout_marginTop="@dimen/margin_top_large"

                android:textAppearance="@style/TextPrimary"
                tools:text="Description"
                />

            <View
                android:id="@+id/informationTitleDivider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_size"

                app:layout_constraintTop_toBottomOf="@id/descriptionText"

                android:layout_marginTop="@dimen/margin_top_large"
                android:background="@color/divider"
                />

            <TextView
                android:id="@+id/informationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toStartOf="@id/descriptionTitleTextView"
                app:layout_constraintTop_toBottomOf="@id/informationTitleDivider"
                android:layout_marginTop="@dimen/margin_top_large"

                android:textAppearance="@style/TitleSecondary"
                android:text="@string/information"
                />
            
            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"

                app:layout_constraintTop_toBottomOf="@id/informationTitle"
                app:layout_constraintStart_toStartOf="@id/descriptionTitleTextView"
                app:layout_constraintEnd_toStartOf="@id/secondText"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_bias="0"

                android:layout_marginTop="@dimen/margin_top_large"
                android:layout_marginEnd="@dimen/margin_start"

                style="@style/IconAppearance"
                app:srcCompat="@drawable/ic_location"
                />

            <TextView
                android:id="@+id/secondText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toEndOf="@id/locationIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/locationIcon"

                tools:text="Second Text"
                android:textAppearance="@style/TextPrimary"
                />

            <ImageView
                android:id="@+id/internetImageView"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"

                app:layout_constraintTop_toBottomOf="@id/secondText"
                app:layout_constraintStart_toStartOf="@id/locationIcon"

                android:layout_marginTop="@dimen/margin_top"

                style="@style/IconAppearance"
                app:srcCompat="@drawable/ic_link"
                />

            <TextView
                android:id="@+id/linkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toStartOf="@id/secondText"
                app:layout_constraintTop_toTopOf="@id/internetImageView"

                tools:text="link"
                android:textAppearance="@style/TextPrimary"
                android:textColor="@color/linkColor"
                />

            <tigerhacks.android.tigerhacksapp.sponsors.views.MentorsView
                android:id="@+id/mentorLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/linkText"
                app:layout_constraintStart_toStartOf="@id/descriptionTitleTextView"
                app:layout_constraintEnd_toEndOf="parent"

                android:layout_marginTop="@dimen/margin_top"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>