<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:elevation="3dp"
        android:background="@color/transparent">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:theme="@style/ToolbarThemeWhite"
            app:expandedTitleTextAppearance="@style/CollapsingToolbarLayoutExpandedTextStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true">
            <ImageView
                android:id="@+id/mainImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:padding="50dp"
                app:layout_collapseMode="parallax"
                android:fitsSystemWindows="true"
                app:srcCompat="@mipmap/ic_launcher"
                android:contentDescription="@string/sponsor_logo"
                />


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                android:fitsSystemWindows="false"
                />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/descriptionTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content" 
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/sponsor_margin_top"
                android:layout_marginStart="@dimen/sponsor_margin_start"
                android:layout_marginEnd="@dimen/sponsor_margin_start"
                android:textSize="@dimen/sponsor_text_size_title"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/description"
                />
            
            <View
                android:id="@+id/descriptionTitleDivider"
                android:layout_width="0dp"
                android:layout_height="@dimen/sponsor_spacer_small"

                app:layout_constraintTop_toBottomOf="@id/descriptionTitleTextView"
                app:layout_constraintStart_toStartOf="@id/descriptionTitleTextView"
                app:layout_constraintEnd_toEndOf="@id/descriptionTitleTextView"

                android:layout_marginTop="@dimen/sponsor_margin_top"
                android:background="@color/divider"
                />
            
            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sponsor_margin_top"
                app:layout_constraintEnd_toEndOf="@id/descriptionTitleTextView"
                app:layout_constraintStart_toStartOf="@id/descriptionTitleTextView"
                app:layout_constraintTop_toBottomOf="@id/descriptionTitleDivider"
                app:layout_constraintHorizontal_bias="0"
                android:textSize="@dimen/sponsor_text_size"
                android:textColor="@color/black"
                tools:text="Description"
                />
            
            <TextView
                android:id="@+id/informationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/descriptionTitleTextView"
                app:layout_constraintTop_toBottomOf="@id/descriptionText"
                android:layout_marginTop="@dimen/sponsor_margin_top"
                android:textSize="@dimen/sponsor_text_size_title"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/information"
                />

            <View
                android:id="@+id/informationTitleDivider"
                android:layout_width="0dp"
                android:layout_height="@dimen/sponsor_spacer_small"

                app:layout_constraintTop_toBottomOf="@id/informationTitle"
                app:layout_constraintStart_toStartOf="@id/descriptionTitleTextView"
                app:layout_constraintEnd_toEndOf="@id/descriptionTitleTextView"

                android:layout_marginTop="@dimen/sponsor_margin_top"
                android:background="@color/divider"
                />
            
            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="@dimen/sponsor_icon_size"
                android:layout_height="@dimen/sponsor_icon_size"
                android:layout_marginTop="@dimen/sponsor_margin_top"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/informationTitleDivider"
                app:layout_constraintStart_toStartOf="@id/descriptionTitleTextView"
                app:layout_constraintEnd_toStartOf="@id/secondText"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_bias="0"
                app:srcCompat="@drawable/ic_location"
                />

            <TextView
                android:id="@+id/secondText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Second Text"
                app:layout_constraintStart_toEndOf="@id/locationIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/locationIcon"
                android:textSize="@dimen/sponsor_text_size"
                android:textColor="@color/black"
                />

            <ImageView
                android:id="@+id/internetImageView"
                android:layout_width="@dimen/sponsor_icon_size"
                android:layout_height="@dimen/sponsor_icon_size"
                android:layout_marginTop="@dimen/sponsor_margin_top"
                app:layout_constraintTop_toBottomOf="@id/secondText"
                app:layout_constraintStart_toStartOf="@id/locationIcon"
                app:srcCompat="@drawable/ic_link"
                />

            <TextView
                android:id="@+id/linkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/secondText"
                app:layout_constraintTop_toTopOf="@id/internetImageView"

                tools:text="link"
                android:textColor="@color/linkColor"
                android:textSize="@dimen/sponsor_text_size"
                />

            <tigerhacks.android.tigerhacksapp.sponsors.views.MentorsView
                android:id="@+id/mentorLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/linkText"
                app:layout_constraintStart_toStartOf="@id/descriptionTitleTextView"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>