<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:paddingTop="8dp"
    tools:paddingBottom="8dp"
    tools:paddingStart="16dp"
    tools:paddingEnd="16dp"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">
    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/contactTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:textColor="@color/sponsorTextTitle"
        android:textSize="@dimen/sponsor_text_size"
        tools:text="Paul Gillis"
        />
    <TextView
        android:id="@+id/contactTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/nameTextView"
        app:layout_constraintStart_toEndOf="@id/nameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/sponsor_text_size"
        android:textColor="@color/linkColor"
        tools:text="UDCR..."
        />
    <TextView
        android:id="@+id/skillsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/sponsor_margin_bottom"
        android:textSize="@dimen/sponsor_text_size"
        android:textColor="@color/sponsorTextPrimary"
        tools:text="Java/Kotlin"
        android:text="@string/na"
        />
</merge>