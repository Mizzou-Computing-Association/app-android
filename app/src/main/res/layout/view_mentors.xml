<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">
    <View
        android:id="@+id/titleSpacer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sponsor_spacer_small"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/sponsor_margin_top"
        android:background="@color/divider"
        />

    <TextView
        android:id="@+id/mentorsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/titleSpacer"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginStart="@dimen/sponsor_margin_start"
        android:layout_marginTop="@dimen/sponsor_margin_top"

        android:textSize="@dimen/sponsor_text_size"
        android:textStyle="bold"
        android:textColor="@color/sponsorTextPrimary"
        android:textAllCaps="true"
        android:text="@string/mentors"
        />

    <LinearLayout
        android:id="@+id/mentorsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mentorsTitle"
        android:paddingTop="@dimen/sponsor_margin_top"
        android:paddingBottom="@dimen/sponsor_margin_top"
        android:paddingStart="@dimen/sponsor_margin_start"
        android:paddingEnd="@dimen/sponsor_margin_start"
        android:orientation="vertical"
        />
    <TextView
        android:id="@+id/mentorsEmptyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleSpacer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/sponsor_margin_start"
        android:layout_marginTop="@dimen/sponsor_margin_top"
        android:textColor="@color/sponsorTextPrimary"
        android:textSize="@dimen/sponsor_text_size"
        android:text="@string/none_available"
        android:visibility="gone"
        />
</merge>