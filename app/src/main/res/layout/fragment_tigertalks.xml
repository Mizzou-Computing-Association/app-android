<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tigerhacks.android.tigerhacksapp.TigerTalksFragment">
    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:src="@drawable/ic_icon_slack_hash_colored" />

            <TextView
                android:id="@+id/slackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="MCA Slack"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/talk1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@color/colorPrimaryLight"
                android:onClick="linkWebDev"
                android:text="Intro to Web Development" />

            <Button
                android:id="@+id/talk3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@color/colorPrimaryLight"
                android:onClick="linkFlask"
                android:text="Intro to Flask" />

            <Button
                android:id="@+id/talk2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@color/colorPrimaryLight"
                android:onClick="linkIOS"
                android:text="Intro to IOS Development" />

            <Button
                android:id="@+id/webLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@color/colorPrimaryLight"
                android:onClick="linkWebsite"
                android:text="TigerHacks Website" />

            <Button
                android:id="@+id/slackLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@color/colorPrimaryLight"
                android:onClick="linkSlack"
                android:text="MCA Slack" />

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
