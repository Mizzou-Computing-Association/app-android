<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textAppearance">@style/TextPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="TitlePrimary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/colorTextTitlePrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TitleSecondary" parent="TitlePrimary">
        <item name="android:textColor">@color/colorTextTitleSecondary</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="TextPrimary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextSecondary" parent="TextPrimary">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="Selector" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/SelectorText</item>
        <item name="tabSelectedTextColor">@color/colorSelectorSelected</item>
        <item name="tabTextColor">@color/colorSelectorUnselected</item>
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="SelectorText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallerTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ToolbarThemeWhite" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>
</resources>
